<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List view -->
    <record id="library_book_view_tree" model="ir.ui.view">
        <field name="name">Library Book List</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date_release"/>
            </tree>
        </field>
    </record>

    <!-- Form view -->
    <record id="library_book_view_form" model="ir.ui.view">
        <field name="name">Library Book Form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form>
            <button name="make_available" string="Make Available" type="object"/>
            <button name="make_borrowed" string="Make Borrowed" type="object"/>
            <button name="make_lost" string="Make Lost" type="object"/>
            <button name="log_all_library_members" string="Log Members" type="object"/>
            <field name="state" widget="statusbar"/>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="author_ids" widget="many2many_tags"/>
                            <field name="state"/>
                            <field name="pages"/>
                            <field name="notes"/>
                        </group>
                        <group>
                            <field name="short_name"/>
                            <field name="date_release"/>
                            <field name="age_days"/>
                            <field name="date_updated"/>
                            <field name="cover"/>
                            <field name="reader_rating"/>
                            <field name="cost_price"/>
                            <field name="ref_doc_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" />
                    </group>
                    <group string="Book Issues">
                        <field name="book_issue_id" nolabel="1">
                        <tree>
                            <field name="create_date"/>
                            <field name="submitted_by"/>
                            <field name="issue_description"/>
                        </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- custom search library book -->
    <record id="library_book_view_search" model="ir.ui.view">
    <field name="name">Library Book Search</field>
    <field name="model">library.book</field>
    <field name="arch" type="xml">
        <search>
            <field name="name"/>
            <field name="author_ids"/>
            <filter string="No Authors" name="without_author" domain="[('author_ids','=',False)]"/>
        </search>
    </field>
    </record>
    <!-- Library book action -->
    <record id='library_book_action' model='ir.actions.act_window'>
        <field name="name">Library Books</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="My Library" id="library_base_menu" />
    <menuitem name="Books" id="library_book_menu" parent="library_base_menu" action="library_book_action"/>
</odoo>
